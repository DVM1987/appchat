# ============================================
# Environment Configuration for AppChat
# ============================================
# Copy this file to .env and fill in your values.
# NEVER commit the .env file to version control!

# ---- Backend Services ----

# JWT Secret (must be at least 32 characters)
JWT_SECRET_KEY=your_jwt_secret_here_min_32_chars_long

# PostgreSQL (Identity & User services)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=admin
DB_PASSWORD=your_secure_password

# MongoDB (Chat service)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_password

# Redis (Presence service)
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ (Event bus)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=your_secure_password

# ---- Mobile App (Flutter) ----
# Pass via: flutter run --dart-define=ENV=production --dart-define=API_BASE_URL=https://...

# Environment: development | staging | production
ENV=development

# API Base URL (your AWS domain when deployed)
API_BASE_URL=https://api.your-domain.com
